etcd-wrapper:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        oci-builder: 'docker-buildx'
        platforms:
        - linux/amd64
        - linux/arm64
        dockerimages:
          etcd-wrapper:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/etcd-wrapper'
            dockerfile: 'Dockerfile'
            inputs:
              repos:
                source: ~
              steps:
                build: ~
    steps:
      check:
        image: 'golang:1.20.5'
      test:
        image: 'golang:1.20.5'
      build:
        image: 'golang:1.20.5'
        output_dir: 'binary'

  jobs:
    head-update:
      traits:
        draft_release: ~
        component_descriptor: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C0177NLL8V9' # gardener-etcd
              slack_cfg_name: 'scp_workspace'
        component_descriptor: ~
